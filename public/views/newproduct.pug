  title Arthur Workshop

  .form-container
    .form 
        form(action="/admin/panel/new" method="POST")
            .imagen.section
                .separator 
                    h2 Imagen
                    input.new-input(type="file" name="pImage")
                .separator 
                    h2 Precio (Incluir "$")
                    input.new-input(type="text" name="pPrice")
                .separator 
                    h2 Descuento (Incluir "%")
                    input.new-input(type="text" name="pDisc")
                .separator 
                    h2 Descripción
                    input.new-input(type="text" name="pName")
                .separator 
                    h2 Color
                    input.new-input(type="text" name="pColor")
                .separator 
                    h2 Tamaño
                    input.new-input(type="text" name="pSize")
                .separator 
                    h2 ID
                    input.new-input(type="number" name="pID")
                button#submit(type="submit") Enviar
        

  